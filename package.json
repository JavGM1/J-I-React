{
  "private": true,
  "name": "j-i-react-monorepo",
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "npm --prefix frontend run dev",
    "build": "npm --prefix frontend run build",
    "preview": "npm --prefix frontend run preview",
    "install:frontend": "npm --prefix frontend install",
    "test": "karma start --single-run",
    "test:watch": "karma start"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.8.1",
    "css-loader": "^7.1.2",
    "jasmine-core": "^5.12.0",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.1",
    "karma-jasmine": "^5.1.0",
    "karma-sourcemap-loader": "^0.4.0",
    "karma-webpack": "^5.0.1",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "bootstrap": "^5.3.8",
    "react-bootstrap": "^2.10.10"
  },
  "module": {
    "rules": [
      {
        "test": "/\\.tsx?$/",
        "use": "ts-loader",
        "exclude": "/node_modules/"
      },
      {
        "test": "/\\.css$/",
        "use": [
          "style-loader",
          "css-loader"
        ]
      },
      {
        "test": "/\\.(png|jpg|svg)$/",
        "type": "asset/resource"
      }
    ]
  },
  "resolve": {
    "extensions": [
      ".ts",
      ".tsx",
      ".js",
      ".jsx"
    ]
  },
  "devtool": "inline-source-map",
  "reporters": [
    "progress",
    "coverage"
  ],
  "coverageReporter": {
    "type": "html",
    "dir": "coverage/"
  },
  "browsers": [
    "ChromeHeadless"
  ],
  "singleRun": true,
  "concurrency": "Infinity"
}
